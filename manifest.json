{
  "manifest_version": 3,
  "name": "LinkedIn Serator Bloker",
  "version": "1.0",
  "description": "Blokira odredjene individue iz tvog LinkedIn feeda, tako da ne moras da gledas carape, snimke iz teretane, politicke promocije i slicna sranja",
  "permissions": ["storage", "scripting"],
  "icons": {
    "16": "icons/logo_2_1024.png",
    "32": "icons/logo_2_1024.png",
    "48": "icons/logo_2_1024.png",
    "128": "icons/logo_2_1024.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo_2_1024.png",
      "32": "icons/logo_2_1024.png",
      "48": "icons/logo_2_1024.png",
      "128": "icons/logo_2_1024.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["blocklist.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
